import * from "materials/scripts/buildings_defense.material"

material buildings/defense/wall_gate_lvl_4 : buildings/destructible
{
	set_texture_alias albedo			materials/textures/buildings/defense/wall_gate_lvl_4_albedo.dds
	set_texture_alias normal			materials/textures/buildings/defense/wall_gate_lvl_3_normal.dds
	set_texture_alias packed			materials/textures/buildings/defense/wall_gate_lvl_3_packed.dds
	set_texture_alias emissive			materials/textures/buildings/defense/wall_gate_lvl_4_emissive.dds

	technique 0
	{
		pass 0
		{
			texture_unit gradient
			{
				anim_texture materials/textures/gradient/selector_gradient.dds 190 8
			}
		}
	}
}

material buildings/defense/wall_gate_lvl_4_dissolve : pbr/height_dissolve
{
	set_texture_alias albedo			materials/textures/buildings/defense/wall_gate_lvl_4_albedo.dds
	set_texture_alias normal			materials/textures/buildings/defense/wall_gate_lvl_3_normal.dds
	set_texture_alias packed			materials/textures/buildings/defense/wall_gate_lvl_3_packed.dds
	//set_texture_alias emissive			materials/textures/buildings/defense/wall_gate_lvl_4_emissive.dds

	technique 0
	{
		pass 0
		{
			texture_unit gradient
			{
				anim_texture materials/textures/gradient/selector_gradient.dds 190 8
			}
		}
	}
}

